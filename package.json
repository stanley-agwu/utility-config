{
  "name": "utility-config",
  "version": "1.0.0",
  "description": "React Development code standards",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "utility-config"
  },
  "keywords": [
    "lint",
    "linting",
    "eslint",
    "sort",
    "order",
    "import",
    "style-lint",
    "test",
    "testing",
    "styles",
    "prettier",
    "format"
  ],
  "author": "Stanley Agwu",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "standard-version": "^9.5.0",
    "eslint": "^8.39.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "stylelint": "^15.6.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "scopeList": [
        "eslint",
        "stylelint",
        "test"
      ],
      "disableBreakingChanges": true,
      "types": {
        "feat": {
          "description": "A new feature or change in functionality",
          "title": "Features"
        },
        "fix": {
          "description": "A bug fix",
          "title": "BugFixes"
        },
        "refactor": {
          "description": "A code change that neither fixes a bug nor adds a new feature",
          "title": "Refactors"
        },
        "chore": {
          "description": "Changes to the build process or auxiliary tools or libraries such as documentation",
          "title": "Chores"
        },
        "test": {
          "description": "Adding missing tests",
          "title": "Tests"
        },
        "revert": {
          "description": "A code change to revert a previous commit",
          "title": "Reverts"
        }
      },
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
